pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Check out the code from the GitHub repository
                checkout([$class: 'GitSCM',
                          branches: [[name: '*/change']], // You can specify the branch you want to build
                          doGenerateSubmoduleConfigurations: false,
                          extensions: [[$class: 'CleanBeforeCheckout'],
                                      [$class: 'CheckoutOption',
                                       timeout: 60]],
                          submoduleCfg: [],
                          userRemoteConfigs: [[url: 'https://github.com/Ant2965/Greedy.git']]])
            }
        }

        stage('Build') {
            steps {
                // Add your build commands here
                sh 'your-build-command'
            }
        }

        // Add more stages for additional steps like testing and deployment
    }

    post {
        success {
            // Notify success or trigger post-build actions here
        }

        failure {
            // Notify failure or trigger post-failure actions here
        }
    }
}

